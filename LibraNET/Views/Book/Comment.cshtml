@model CommentViewModel
<h2 class="text-center">Comments</h2>
<hr />
@for (int i = 0; i < 6; i++)
{
	<div class="my-2">
		<div>
			<p class="h6 fw-bold d-inline-flex">@Model.Name</p>
			<span class="text-muted">@Model.SubmissionTime.ToString("f")</span>
		</div>
		<p>@Model.Text</p>
		<hr />
	</div>
}