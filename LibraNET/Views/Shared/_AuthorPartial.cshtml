@model AuthorViewModel
@inject IImageService imageService

<div class="my-3 col-md-8 col-lg-6 col-xl-4">
	<div class="card text-black entity-card">
		<div class="text-center img-container">
			<img class="p-3" src="~/Images/Authors/@(imageService.GetAuthorImageNameById(Model.ImageId))" alt="@Model.Name" />
		</div>
		<div class="card-body text-center">
			<h5 class="card-title">@Model.Name</h5>
			<p class="text-muted mb-4">@Model.Description</p>
			@if (User.IsInRole("Admin"))
			{
				<form asp-controller="Author" asp-action="Delete" asp-route-id="@Model.Id" method="post">
					<div class="btn-group w-50" role="group">
						<a class="btn btn-success" asp-controller="Author" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
						<button class="btn btn-dark" type="submit" onclick="return confirm('Are you sure you want to delete this author: @Model.Name?')">
							Delete
						</button>
					</div>
				</form>
			}
		</div>
	</div>
</div>
