@model BookCartViewModel
@inject IImageService imageService
<div id="@Model.Id" class="card rounded-3 mb-4">
	<div class="card-body p-4">
		<div class="row d-flex justify-content-between align-items-center">
			<div class="col-sm-2 col-md-2 col-lg-2 col-xl-1 mb-3 justify-content-center">
				<a class="text-decoration-none text-reset" asp-area="" asp-controller="Book" asp-action="Details" asp-route-id="@Model.Id">
					<img src="~/Images/Books/@(imageService.GetBookImageNameById(Model.ImageId))"
						 class="img-fluid rounded-3" alt="@Model.Title">
				</a>
			</div>
			<div class="col-sm-4 col-md-3 col-lg-3 col-xl-4 mb-3">
				<h5 class="m-0 ellipsis">@Model.Title</h5>
			</div>
			<div class="col-sm-2 col-md-2 col-lg-3 col-xl-2 d-flex justify-content-center mb-3">
				<input asp-for="Quantity" type="text" class="form-control text-center border border-secondary bg-white" disabled />
			</div>
			<div class="col-sm-4 col-md-3 col-lg-2 col-xl-2 offset-lg-1">
				<h5 class="mb-0 text-center">$@Model.TotalPrice</h5>
			</div>
		</div>
	</div>
</div>